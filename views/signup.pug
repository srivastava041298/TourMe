extends base 

block content
    .main
        .signup-form
            h2.heading--secondary.bottom-margin Create your account
            form.form.form--signup
                .form-group
                    label.form-label(for='name') Your Name
                    input#name.form-input(type='text' placeholder='Enter your name', required)
                .form-group
                    label.form-label(for='email') Email address
                    input#email.form-input(type='email', placeholder='Enter your email', required)
                .form-group.margin-btm
                    label.form-label(for='password') Password
                    input#password.form-input(type='password', placeholder='Enter your password', required, minlength='8')
                .form-group.margin-btm
                    label.form-label(for='password-confirm') Confirm Password
                    input#password-confirm.form-input(type='password', placeholder='Confirm password', required, minlength='8')          
                .form-group
                    button.btn.btn-green.sign-up Sign up